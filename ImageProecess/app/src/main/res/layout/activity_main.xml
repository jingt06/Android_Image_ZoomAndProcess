<RelativeLayout android:id="@+id/container" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"  tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#96bcdd"
        >
        <ImageButton
            android:id="@+id/hand"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/ic_hand"
            android:background="#2928dd"/>
        <ImageButton
            android:id="@+id/marker"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:layout_toRightOf="@id/hand"
            android:src="@mipmap/ic_marker"
            android:background="#00000000"/>
        <ImageButton
            android:id="@+id/crop"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:layout_toRightOf="@id/marker"
            android:src="@mipmap/ic_crop"
            android:background="#00000000"/>
        <Button
            android:id="@+id/select"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/crop"
            android:background="#00000000"
            android:text="Select Image"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/img"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@mipmap/ic_launcher"
        android:scaleType="matrix"
        android:layout_below="@id/head"
        />
    <LinearLayout
        android:id="@+id/draw_setting"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="#96bcdd">
        <Button
            android:id="@+id/undo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Undo"
            android:background="#00000000"/>
        <Button
            android:id="@+id/color"
            android:text="Color"
            android:background="#80ffff33"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/pen_width_setting"
            android:text="Width"
            android:background="#00000000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>


        <Button
            android:id="@+id/resetDraw"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Reset"
            android:background="#00000000"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/color_pick"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@id/draw_setting"
        android:background="#00000000">
        <ImageButton
            android:id="@+id/red"
            android:background="#80ff4d4d"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"/>
        <ImageButton
            android:id="@+id/yellow"
            android:text="Color"
            android:background="#80ffff33"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/red"/>
        <ImageButton
            android:id="@+id/blue"
            android:background="#804d4dff"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/yellow"/>

        <ImageButton
            android:id="@+id/black"
            android:background="#80262626"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/blue"/>
    </RelativeLayout>


    <SeekBar
        android:id="@+id/pen_width_sb"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:secondaryProgress="20"
        android:layout_above="@id/draw_setting"/>
    <RelativeLayout
        android:id="@+id/crop_saving"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Save"
            android:layout_alignParentLeft="true"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Cancel"
            android:layout_alignParentRight="true"/>
        </RelativeLayout>

</RelativeLayout>
